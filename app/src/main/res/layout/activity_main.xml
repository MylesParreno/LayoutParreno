<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC364C"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="#CC364C"
        android:text="My Favorite Cars"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold|italic" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="278dp"
        android:layout_below="@id/textView3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:background="#2196F3"
            android:text="Subaru WRX STI"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:background="#2196F3"
            android:text="Subaru BRZ"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="202dp"
            android:layout_height="250dp"
            android:layout_row="1"
            android:layout_column="0"
            app:srcCompat="@drawable/car1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="206dp"
            android:layout_height="249dp"
            android:layout_row="1"
            android:layout_column="1"
            app:srcCompat="@drawable/car2" />

    </GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:layout_below="@id/textView3">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="200dp"
            android:layout_height="177dp"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/car3" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:background="#03A9F4"
            android:text="Mc Laren P1"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="204dp"
            android:layout_height="178dp"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/car4" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="#2196F3"
            android:text="Lotus Evora 2020"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="1" />

    </androidx.gridlayout.widget.GridLayout>

</RelativeLayout>